{
  "name": "catering-portfolio",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:accessibility": "jest --testPathPattern=accessibility",
    "test:performance": "node tests/performance/performance.test.js",
    "test:all": "npm run test && npm run test:e2e",
    "verify": "node tests/verification/verify-deployment.js",
    "admin": "node admin-helper.js",
    "admin:new": "node admin-commands.js",
    "admin:stats": "node quick-admin.js stats",
    "admin:upload": "node quick-admin.js upload",
    "admin:optimize": "node quick-admin.js optimize",
    "admin:clear": "node quick-admin.js clear",
    "admin:delete": "node force-delete-selected.js",
    "git:push": "git add . && git commit -m \"Quick update: %date% %time%\" && git push origin master",
    "git:quick": "node auto-commit.js",
    "watch:push": "node watch-and-push.js",
    "dev:autopush": "concurrently \"npm run dev\" \"npm run watch:push\"",
    "gemini:push": "node gemini-hook.js",
    "gemini": "powershell -ExecutionPolicy Bypass -File ./gemini-autopush.ps1",
    "admin:help": "node quick-admin.js help",
    "keepalive": "node keep-alive.js",
    "cron:keepalive": "node cron-keepalive.js"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.53.0",
    "critters": "^0.0.23",
    "next": "15.4.5",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.44.0",
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.21",
    "axe-core": "^4.9.1",
    "chokidar": "^4.0.3",
    "eslint": "^9",
    "eslint-config-next": "15.4.5",
    "jest": "^29.7.0",
    "jest-axe": "^8.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "lighthouse": "^12.1.0",
    "postcss": "^8.5.6",
    "puppeteer": "^22.11.2",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=18.17.0",
    "npm": ">=9.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts",
      "!src/app/layout.tsx"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
